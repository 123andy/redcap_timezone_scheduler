    "project-settings": [
        {
            "name": "Configure an Entry for Each Timezone Slot",
            "key": "instances",
            "type": "sub_settings",
            "repeatable": true,
            "sub_settings": [
                {
                    "key": "slot-project-id",
                    "name": "<b>Slot Project ID</b><br>Enter the project_id that contains database of slots<br>In the future we might make this a super-user-only setting",
                    "required": true,
                    "type": "project-id"
                },
                {
                    "key": "slot-id-field",
                    "name": "<b>Slot ID Field</b><br>Field containing blank text field for slot ID",
                    "required": true,
                    "type": "field-list"
                },
                {
                    "key": "slot-id-field-event-id",
                    "name": "<b>Slot ID Field Event</b><br>If project is longitudinal, please select the event containing the slot field",
                    "required": false,
                    "type": "event-list"
                },
                {
                    "key": "slot-datetime-field",
                    "name": "<b>Slot DateTime Field</b><br><i>(Optional)</i> Select a date/time field here and the selected slot's date/time (in server timezone) will be stored",
                    "required": false,
                    "type": "field-list"
                },
                {
                    "key": "slot-timezone-field",
                    "name": "<b>Slot Timezone Field</b><br><i>(Optional)</i> Select a text field here to store the participant's local timezone",
                    "required": false,
                    "type": "field-list"
                },
                {
                    "key": "slot-filter-expression",
